<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingStart="8dp"
              android:paddingEnd="8dp"
              android:paddingBottom="4dp"
              android:paddingTop="4dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp">

            <TextView
                android:id="@+id/cloudmanager_tv_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/cloudmanager_iv_available"
                android:text="code"/>

            <TextView
                android:id="@+id/cloudmanager_tv_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/cloudmanager_tv_code"
                android:layout_toStartOf="@+id/cloudmanager_iv_available"
                android:text="timestamp"/>

            <ImageView
                android:id="@+id/cloudmanager_iv_available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/cloudmanager_ic_code_unavailable"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>